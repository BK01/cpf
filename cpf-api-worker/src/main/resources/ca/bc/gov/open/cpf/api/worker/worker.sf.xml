<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:util="http://www.springframework.org/schema/util"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-3.0.xsd
  "
>
  <import resource="classpath:com/revolsys/parallel/processNetworkStart.sf.xml" />

  <bean
    id="cpfWorker"
    class="ca.bc.gov.open.cpf.api.worker.BatchJobWorkerScheduler"
    p:businessApplicationRegistry-ref="businessApplicationRegistry"
    p:webServiceUrl="http://localhost/cpf"
    p:username="cpf_worker"
    p:password="cpf_2009"
    p:maximumPoolSize="100" />

  <bean
    id="businessApplicationRegistry"
    class="ca.bc.gov.open.cpf.plugin.impl.BusinessApplicationRegistry"
    p:configPropertyLoader="#{cpfWorker.configPropertyLoader}"
    p:appLogDirectory="/apps/logs/cpf"
  >
    <property name="moduleLoaders">
      <set>
      </set>
    </property>
  </bean>

</beans>
