<?xml version="1.0" encoding="UTF-8"?>
<Configuration strict="true" name="cpf-api-app">

  <Appenders>
    <Appender type="Console" name="Console">
      <Layout type="PatternLayout" pattern="%d\t%p\t%c\t%m%n" />
    </Appender>
  </Appenders>

  <Loggers>

    <Logger name="ca.bc.gov.cpf" level="INFO" />

    <Logger name="ca.bc.gov.open.cpf" level="INFO" />

    <Logger
      name="ca.bc.gov.open.cpf.client.api.httpclient"
      level="ERROR" />

    <Root level="ERROR">
      <AppenderRef ref="Console" />
    </Root>
  </Loggers>

</Configuration>
