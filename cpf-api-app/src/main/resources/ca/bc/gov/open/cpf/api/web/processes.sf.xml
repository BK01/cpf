<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  "
>
  <bean
    id="cpfJobPreProcess"
    class="ca.bc.gov.open.cpf.api.scheduler.BatchJobPreProcess"
    p:batchJobService-ref="batchJobService" />

  <bean
    id="cpfJobScheduler"
    class="ca.bc.gov.open.cpf.api.scheduler.BatchJobScheduler"
    p:batchJobService-ref="batchJobService" />


  <bean
    id="cpfJobPostProcess"
    class="ca.bc.gov.open.cpf.api.scheduler.BatchJobPostProcess"
    p:batchJobService-ref="batchJobService" />

  <bean
    id="cpfStatisticsProcess"
    class="ca.bc.gov.open.cpf.api.scheduler.StatisticsProcess"
    p:batchJobService-ref="batchJobService" />

  <bean
    id="cpfAppPool"
    class="com.revolsys.parallel.process.RunnableChannelExecutor"
  >
    <property name="channels">
      <list>
        <value>#{cpfJobPostProcess.out}</value>
        <value>#{cpfJobScheduler.out}</value>
        <value>#{cpfJobPreProcess.out}</value>
      </list>
    </property>
  </bean>

</beans>
