<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
  "
>
  <bean
    name="/CPF/CPF_USER_GROUPS-htmlbuilder"
    class="ca.bc.gov.open.cpf.api.web.builder.UserGroupUiBuilder"
    p:batchJobService-ref="batchJobService"
  >
    <property name="pages">
      <list>
        <bean
          p:name="groupList"
          class="com.revolsys.ui.web.config.Page"
          p:title="User Groups"
          p:path="/admin/userGroups/"
          p:permission="hasRole('ROLE_ADMIN')" />
        <bean
          p:name="groupView"
          class="com.revolsys.ui.web.config.Page"
          p:title="User Group {userGroupName}"
          p:path="/admin/userGroups/{userGroupName}/" />
        <bean
          p:name="groupEdit"
          class="com.revolsys.ui.web.config.Page"
          p:title="Edit User Group {userGroupName}"
          p:path="/admin/userGroups/{userGroupName}/edit/"
          p:permission="#userGroupName.startsWith('GLOBAL_')" />
        <bean
          p:name="groupAdd"
          class="com.revolsys.ui.web.config.Page"
          p:title="Add User Group"
          p:path="/admin/userGroups/add/" />
        <bean
          p:name="groupDelete"
          class="com.revolsys.ui.web.config.Page"
          p:title="Delete User Group"
          p:path="/admin/userGroups/{userGroupName}/delete/"
          p:permission="#userGroupName.startsWith('GLOBAL_')" />
        <bean
          p:name="userAccountList"
          class="com.revolsys.ui.web.config.Page"
          p:title="User Groups"
          p:path="/admin/userAccounts/{consumerKey}/userGroups/" />
        <bean
          p:name="userAccountDelete"
          class="com.revolsys.ui.web.config.Page"
          p:path="/admin/userAccounts/{consumerKey}/userGroups/{userGroupName}/delete/" />
        <bean
          p:name="moduleList"
          class="com.revolsys.ui.web.config.Page"
          p:title="User Groups"
          p:path="/admin/modules/{moduleName}/userGroups/" />
        <bean
          p:name="moduleView"
          class="com.revolsys.ui.web.config.Page"
          p:title="User Group {userGroupName}"
          p:path="/admin/modules/{moduleName}/userGroups/{userGroupName}/" />
        <bean
          p:name="moduleEdit"
          class="com.revolsys.ui.web.config.Page"
          p:title="User Group {userGroupName} Edit"
          p:path="/admin/modules/{moduleName}/userGroups/{userGroupName}/edit/"
          p:permission="#userGroupName.startsWith(#moduleName)" />
        <bean
          p:name="moduleAdd"
          class="com.revolsys.ui.web.config.Page"
          p:title="User Group Add"
          p:path="/admin/modules/{moduleName}/userGroups/add/" />
        <bean
          p:name="moduleDelete"
          class="com.revolsys.ui.web.config.Page"
          p:title="User Group Delete"
          p:path="/admin/modules/{moduleName}/userGroups/{userGroupName}/delete/"
          p:permission="#userGroupName.startsWith(#moduleName) and (hasRole('ROLE_ADMIN') or hasRole('ROLE_ADMIN_MODULE_' + #moduleName + '.*'))" />
        <bean
          p:name="moduleAdminList"
          class="com.revolsys.ui.web.config.Page"
          p:title="Module Admin User Groups"
          p:path="/admin/modules/{moduleName}/adminUserGroups/"
          p:permission="hasRole('ROLE_ADMIN')  or hasRole('ROLE_ADMIN_MODULE_' + #moduleName + '_ADMIN')" />
        <bean
          p:name="moduleAdminView"
          class="com.revolsys.ui.web.config.Page"
          p:title="Admin User Group {userGroupName}"
          p:path="/admin/modules/{moduleName}/adminUserGroups/{userGroupName}/" />
      </list>
    </property>
    <property name="serializers">
      <list>
        <bean
          p:name="ACTIVE_IND"
          class="com.revolsys.ui.html.serializer.key.BooleanImageKeySerializer" />
        <bean
          p:name="globalActions"
          class="com.revolsys.ui.html.serializer.key.MultipleKeySerializer"
          p:label="Actions"
        >
          <property name="serializers">
            <list>
              <bean
                class="com.revolsys.ui.html.serializer.key.ActionFormKeySerializer"
                p:name="groupDelete"
                p:label="Delete"
                p:iconName="fa fa-trash"
              >
                <property name="parameterNameMap">
                  <map>
                    <entry
                      key="userGroupName"
                      value="USER_GROUP_NAME" />
                  </map>
                </property>
              </bean>
            </list>
          </property>
        </bean>
        <bean
          p:name="WHO_CREATED"
          p:label="Created By"
          class="com.revolsys.ui.html.serializer.key.StringKeySerializer" />
        <bean
          p:name="WHEN_CREATED"
          p:label="Creation Time"
          class="com.revolsys.ui.html.serializer.key.DateFormatKeySerializer" />
        <bean
          p:name="WHO_UPDATED"
          p:label="Modified By"
          class="com.revolsys.ui.html.serializer.key.StringKeySerializer" />
        <bean
          p:name="WHEN_UPDATED"
          p:label="Modification Time"
          class="com.revolsys.ui.html.serializer.key.DateFormatKeySerializer" />
      </list>
    </property>
    <property name="fields">
      <map>
        <entry key="USER_GROUP_NAME">
          <bean
            p:name="USER_GROUP_NAME"
            class="com.revolsys.ui.html.fields.TextField"
            p:required="true" />
        </entry>
        <entry key="DESCRIPTION">
          <bean
            p:name="DESCRIPTION"
            class="com.revolsys.ui.html.fields.TextAreaField"
            p:required="false" />
        </entry>
        <entry key="ACTIVE_IND">
          <bean
            p:name="ACTIVE_IND"
            class="com.revolsys.ui.html.fields.CheckBox01Field" />
        </entry>
      </map>
    </property>
    <property name="views">
      <map>
        <entry key="groupList">
          <list>
            <bean
              p:name="adminUserGroupLink"
              class="com.revolsys.ui.html.serializer.BuilderSerializer"
              p:key="USER_GROUP_NAME"
              p:label="User Group Name" />
            <value>MODULE_NAME</value>
            <value>DESCRIPTION</value>
            <value>ACTIVE_IND</value>
            <value>globalActions</value>
          </list>
        </entry>
        <entry key="groupView">
          <list>
            <value>USER_GROUP_ID</value>
            <value>MODULE_NAME</value>
            <value>USER_GROUP_NAME</value>
            <value>DESCRIPTION</value>
            <value>ACTIVE_IND</value>
            <value>WHO_CREATED</value>
            <value>WHEN_CREATED</value>
            <value>WHO_UPDATED</value>
            <value>WHEN_UPDATED</value>
            <value>globalActions</value>
          </list>
        </entry>
        <entry key="userAccountList">
          <list>
            <bean
              class="com.revolsys.ui.html.serializer.key.PageLinkKeySerializer"
              p:name="USER_GROUP_NAME"
              p:pageName="groupView" />
            <value>MODULE_NAME</value>
            <value>DESCRIPTION</value>
            <value>ACTIVE_IND</value>
            <bean
              class="com.revolsys.ui.html.serializer.key.MultipleKeySerializer"
              p:name="actions"
            >
              <property name="serializers">
                <list>
                  <bean
                    class="com.revolsys.ui.html.serializer.key.ActionFormKeySerializer"
                    p:name="userAccountDelete"
                    p:label="Delete"
                    p:iconName="fa fa-trash"
                  >
                    <property name="parameterNameMap">
                      <map>
                        <entry
                          key="userGroupName"
                          value="USER_GROUP_NAME" />
                      </map>
                    </property>
                  </bean>
                </list>
              </property>
            </bean>
          </list>
        </entry>
        <entry key="moduleList">
          <list>
            <bean
              class="com.revolsys.ui.html.serializer.key.PageLinkKeySerializer"
              p:name="USER_GROUP_NAME"
              p:pageName="moduleView" />
            <value>DESCRIPTION</value>
            <value>ACTIVE_IND</value>
            <bean
              class="com.revolsys.ui.html.serializer.key.MultipleKeySerializer"
              p:name="actions"
            >
              <property name="serializers">
                <list>
                  <bean
                    class="com.revolsys.ui.html.serializer.key.ActionFormKeySerializer"
                    p:name="moduleDelete"
                    p:label="Delete"
                    p:iconName="fa fa-trash"
                  >
                    <property name="parameterNameMap">
                      <map>
                        <entry
                          key="userGroupName"
                          value="USER_GROUP_NAME" />
                      </map>
                    </property>
                  </bean>
                </list>
              </property>
            </bean>
          </list>
        </entry>
        <entry key="moduleView">
          <list>
            <value>USER_GROUP_ID</value>
            <value>MODULE_NAME</value>
            <value>USER_GROUP_NAME</value>
            <value>DESCRIPTION</value>
            <value>ACTIVE_IND</value>
            <value>WHO_CREATED</value>
            <value>WHEN_CREATED</value>
            <value>WHO_UPDATED</value>
            <value>WHEN_UPDATED</value>
            <bean
              class="com.revolsys.ui.html.serializer.key.MultipleKeySerializer"
              p:name="actions"
            >
              <property name="serializers">
                <list>
                  <bean
                    class="com.revolsys.ui.html.serializer.key.ActionFormKeySerializer"
                    p:name="moduleDelete"
                    p:label="Delete"
                    p:iconName="fa fa-trash"
                  >
                    <property name="parameterNameMap">
                      <map>
                        <entry
                          key="userGroupName"
                          value="USER_GROUP_NAME" />
                      </map>
                    </property>
                  </bean>
                </list>
              </property>
            </bean>
          </list>
        </entry>
        <entry key="moduleAdminList">
          <list>
            <bean
              class="com.revolsys.ui.html.serializer.key.PageLinkKeySerializer"
              p:name="USER_GROUP_NAME"
              p:pageName="moduleAdminView" />
            <value>DESCRIPTION</value>
            <value>ACTIVE_IND</value>
          </list>
        </entry>
        <entry key="moduleAdminView">
          <list>
            <value>USER_GROUP_ID</value>
            <value>MODULE_NAME</value>
            <value>USER_GROUP_NAME</value>
            <value>DESCRIPTION</value>
            <value>ACTIVE_IND</value>
            <value>WHO_CREATED</value>
            <value>WHEN_CREATED</value>
            <value>WHO_UPDATED</value>
            <value>WHEN_UPDATED</value>
          </list>
        </entry>
      </map>
    </property>

    <property name="keyLists">
      <map>
        <entry key="groupAdd">
          <list>
            <value>USER_GROUP_NAME</value>
            <value>DESCRIPTION</value>
            <value>ACTIVE_IND</value>
          </list>
        </entry>
        <entry key="groupEdit">
          <list>
            <value>USER_GROUP_NAME</value>
            <value>DESCRIPTION</value>
            <value>ACTIVE_IND</value>
          </list>
        </entry>
        <entry key="moduleAdd">
          <list>
            <value>USER_GROUP_NAME</value>
            <value>DESCRIPTION</value>
            <value>ACTIVE_IND</value>
          </list>
        </entry>
        <entry key="moduleEdit">
          <list>
            <value>USER_GROUP_NAME</value>
            <value>DESCRIPTION</value>
            <value>ACTIVE_IND</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>
</beans>