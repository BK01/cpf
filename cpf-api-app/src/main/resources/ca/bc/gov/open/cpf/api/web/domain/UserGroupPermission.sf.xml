<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  "
>

  <bean
    name="/CPF/CPF_USER_GROUP_PERMISSIONS-htmlbuilder"
    class="ca.bc.gov.open.cpf.api.web.builder.UserGroupPermissionUiBuilder"
    p:dataStore-ref="cpfDataStore"
  >
    <property name="pages">
      <list>
        <bean
          class="com.revolsys.ui.web.config.Page"
          p:name="moduleList"
          p:title="User Group Permissions"
          p:path="/admin/modules/{moduleName}/userGroups/{userGroupName}/permissions/" />
        <bean
          class="com.revolsys.ui.web.config.Page"
          p:name="moduleView"
          p:title="User Group Permission {userGroupPermissionId}"
          p:path="/admin/modules/{moduleName}/userGroups/{userGroupName}/permissions/{userGroupPermissionId}/" />
        <bean
          class="com.revolsys.ui.web.config.Page"
          p:name="moduleEdit"
          p:title="Edit User Group Permission {userGroupPermissionId}"
          p:path="/admin/modules/{moduleName}/userGroups/{userGroupName}/permissions/{userGroupPermissionId}/edit/" />
        <bean
          class="com.revolsys.ui.web.config.Page"
          p:name="moduleDelete"
          p:title="Delete User Group Permission {userGroupPermissionId}"
          p:path="/admin/modules/{moduleName}/userGroups/{userGroupName}/permissions/{userGroupPermissionId}/delete/" />
        <bean
          class="com.revolsys.ui.web.config.Page"
          p:name="moduleAdd"
          p:title="Add User Group Permission"
          p:path="/admin/modules/{moduleName}/userGroups/{userGroupName}/permissions/add/" />
      </list>
    </property>

    <property name="fields">
      <map>
        <entry key="ACTIVE_IND">
          <bean
            p:name="ACTIVE_IND"
            class="com.revolsys.ui.html.fields.CheckBox01Field" />
        </entry>
        <entry key="RESOURCE_CLASS">
          <bean
            class="com.revolsys.ui.html.fields.TextField"
            p:name="RESOURCE_CLASS"
            p:required="true"
            p:size="70"
            p:maxLength="255" />
        </entry>
        <entry key="RESOURCE_ID">
          <bean
            class="com.revolsys.ui.html.fields.TextField"
            p:name="RESOURCE_ID"
            p:required="true"
            p:size="70"
            p:maxLength="255" />
        </entry>
        <entry key="ACTION_NAME">
          <bean
            class="com.revolsys.ui.html.fields.TextField"
            p:name="ACTION_NAME"
            p:required="true"
            p:size="70"
            p:maxLength="255" />
        </entry>
      </map>
    </property>

    <property name="serializers">
      <list>
        <bean
          class="com.revolsys.ui.html.serializer.key.MultipleKeySerializer"
          p:name="moduleActions"
          p:label="Actions"
        >
          <property name="serializers">
            <list>
              <bean
                class="com.revolsys.ui.html.serializer.key.ActionFormKeySerializer"
                p:name="moduleDelete"
                p:label="Delete"
              >
                <property name="parameterNameMap">
                  <map>
                    <entry
                      key="userGroupPermissionId"
                      value="USER_GROUP_PERMISSION_ID" />
                  </map>
                </property>
              </bean>
            </list>
          </property>
        </bean>
        <bean
          class="com.revolsys.ui.html.serializer.key.PageLinkKeySerializer"
          p:name="USER_GROUP_NAME_LINK"
          p:pageName="moduleView"
          p:key="userGroupName"
          p:label="User Group Name"
          p:uiBuilder-ref="/CPF/CPF_USER_GROUPS-htmlbuilder" />

        <bean
          p:name="ACTIVE_IND"
          p:label="Active"
          class="com.revolsys.ui.html.serializer.key.BooleanImageKeySerializer" />
        <bean
          p:name="WHO_CREATED"
          p:label="Created By"
          class="com.revolsys.ui.html.serializer.key.StringKeySerializer" />
        <bean
          p:name="WHEN_CREATED"
          p:label="Creation Time"
          class="com.revolsys.ui.html.serializer.key.DateFormatKeySerializer" />
        <bean
          p:name="WHO_CREATED"
          p:label="Modified By"
          class="com.revolsys.ui.html.serializer.key.StringKeySerializer" />
        <bean
          p:name="WHEN_UPDATED"
          p:label="Modification Time"
          class="com.revolsys.ui.html.serializer.key.DateFormatKeySerializer" />
      </list>
    </property>

    <property name="views">
      <map>
        <entry key="moduleList">
          <list>
            <bean
              class="com.revolsys.ui.html.serializer.key.PageLinkKeySerializer"
              p:name="USER_GROUP_PERMISSION_ID"
              p:pageName="moduleView" />
            <value>MODULE_NAME</value>
            <value>USER_GROUP_NAME_LINK</value>
            <value>RESOURCE_CLASS</value>
            <value>RESOURCE_ID</value>
            <value>ACTION_NAME</value>
            <value>ACTIVE_IND</value>
            <value>moduleActions</value>
          </list>
        </entry>
        <entry key="moduleView">
          <list>
            <value>USER_GROUP_PERMISSION_ID</value>
            <value>MODULE_NAME</value>
            <value>USER_GROUP_NAME_LINK</value>
            <value>RESOURCE_CLASS</value>
            <value>RESOURCE_ID</value>
            <value>ACTION_NAME</value>
            <value>ACTIVE_IND</value>
            <value>WHO_CREATED</value>
            <value>WHEN_CREATED</value>
            <value>WHO_UPDATED</value>
            <value>WHEN_UPDATED</value>
            <value>moduleActions</value>
          </list>
        </entry>
      </map>
    </property>
    <property name="keyLists">
      <map>
        <entry key="moduleAdd">
          <list>
            <value>RESOURCE_CLASS</value>
            <value>RESOURCE_ID</value>
            <value>ACTION_NAME</value>
            <value>ACTIVE_IND</value>
          </list>
        </entry>
        <entry key="moduleEdit">
          <list>
            <value>RESOURCE_CLASS</value>
            <value>RESOURCE_ID</value>
            <value>ACTION_NAME</value>
            <value>ACTIVE_IND</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>
</beans>
