<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:util="http://www.springframework.org/schema/util"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-4.1.xsd
  "
>

  <bean
    id="ca.bc.gov.open.cpf.api.scheduler.Tuning-htmlbuilder"
    class="ca.bc.gov.open.cpf.api.web.builder.TuningUiBuilder"
    p:recordStore-ref="cpfRecordStore"
  >
    <property name="pages">
      <list>
        <bean
          p:name="list"
          class="com.revolsys.ui.web.config.Page"
          p:title="List"
          p:path="/admin/tuning/" />
        <bean
          p:name="config"
          class="com.revolsys.ui.web.config.Page"
          p:title="Config Tuning Parameters"
          p:path="/admin/tuning/config/"
          p:permission="hasRole('ROLE_ADMIN')" />
      </list>
    </property>

    <property name="labels">
      <map>
        <entry
          key="preProcessPoolSize"
          value="Pre-Process Thread Pool Size" />
        <entry
          key="postProcessPoolSize"
          value="Post-Process Thread Pool Size" />
        <entry
          key="schedulerPoolSize"
          value="Scheduler Thread Pool Size" />
        <entry
          key="groupResultPoolSize"
          value="Group Result Thread Pool Size" />
      </map>
    </property>

    <property name="views">
      <map>
        <entry key="list">
          <list>
            <value>name</value>
            <value>activeCount</value>
            <value>currentSize</value>
            <value>largestSize</value>
            <value>maxSize</value>
          </list>
        </entry>
      </map>
    </property>

    <property name="listSortOrder">
      <map>
        <entry key="moduleAppList">
          <list>
            <list>
              <value type="int">0</value>
              <value>desc</value>
            </list>
          </list>
        </entry>
      </map>
    </property>

    <property name="keyLists">
      <map>
        <entry key="config">
          <list>
            <value>preProcessPoolSize</value>
            <value>schedulerPoolSize</value>
            <value>groupResultPoolSize</value>
            <value>postProcessPoolSize</value>
            <value>databaseConnectionPoolSize</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>

</beans>
