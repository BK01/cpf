<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration
  xmlns:log4j="http://jakarta.apache.org/log4j/"
  debug="false"
>
  <appender
    name="ConsoleLog"
    class="org.apache.log4j.ConsoleAppender"
  >
    <layout class="org.apache.log4j.PatternLayout">
      <param
        name="ConversionPattern"
        value="%d\t%p\t%c\t%m%n" />
    </layout>
  </appender>

  <logger name="ca.bc.gov">
    <level value="INFO" />
  </logger>

  <logger name="ca.bc.gov.open.cpf.api.security.oauth.OAuthProcessingFilter">
    <level value="ERROR" />
  </logger>

  <logger name="ca.bc.gov.open.cpf.module">
    <level value="INFO" />
  </logger>

  <logger name="ca.bc.gov.open.cpf.api.scheduler.BatchJobService">
    <level value="INFO" />
  </logger>

  <root>
    <level value="ERROR" />
    <appender-ref ref="ConsoleLog" />
  </root>
</log4j:configuration>
