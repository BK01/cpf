<?xml version="1.0" encoding="UTF-8"?>
<web-app
  xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd
  "
  version="3.1"
>
  <context-param>
    <param-name>log4jExposeWebAppRoot</param-name>
    <param-value>false</param-value>
  </context-param>

  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:log4j.xml</param-value>
  </context-param>

  <context-param>
    <param-name>cpfLogDirectory</param-name>
    <param-value>/apps/logs/cpf</param-value>
  </context-param>

  <filter>
    <filter-name>utf8</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter>
    <filter-name>transactionFilter</filter-name>
    <filter-class>com.revolsys.ui.web.servlet.TransactionFilter</filter-class>
  </filter>

  <filter>
    <filter-name>serverRenameFilter</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>

  <filter>
    <filter-name>springSecurityFilterChain</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>

  <filter>
    <filter-name>workerSecurityFilter</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>

  <filter>
    <filter-name>securityExceptionFilter</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>transactionFilter</filter-name>
    <url-pattern>/ws/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>transactionFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>utf8</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>serverRenameFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>springSecurityFilterChain</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>workerSecurityFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>securityExceptionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <listener>
    <listener-class>com.revolsys.ui.web.servlet.listener.ContextCleanupListener</listener-class>
  </listener>

  <listener>
    <listener-class>ca.bc.gov.open.cpf.api.web.CpfLog4jContextListener</listener-class>
  </listener>

  <listener>
    <listener-class>com.revolsys.ui.web.servlet.listener.DriverManagerCleanupListener</listener-class>
  </listener>

  <listener>
    <listener-class>com.revolsys.ui.web.servlet.listener.ContextLoaderListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>cpf</servlet-name>
    <servlet-class>com.revolsys.ui.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/ws.json</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/ws.xml</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/ws/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/worker/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/view/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/openid/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/secure/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/admin/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/j_spring_openid_security_check/*</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <error-page>
    <error-code>400</error-code>
    <location>/error.jsp?subTitle=I'm sorry the path you requested is not valid.</location>
  </error-page>

  <error-page>
    <error-code>401</error-code>
    <location>/error.jsp?subTitle=I'm sorry you must be logged in to access this page.</location>
  </error-page>

  <error-page>
    <error-code>403</error-code>
    <location>/error.jsp?subTitle=I'm sorry you do not have permission to access this page.</location>
  </error-page>

  <error-page>
    <error-code>404</error-code>
    <location>/error.jsp?subTitle=I'm sorry the page you requested could not be found.</location>
  </error-page>

  <error-page>
    <error-code>405</error-code>
    <location>/error.jsp?subTitle=This resource cannot be accessed using this request method</location>
  </error-page>

  <error-page>
    <error-code>500</error-code>
    <location>/error.jsp?subTitle=I'm sorry there was an error generating the page you requested.</location>
  </error-page>
</web-app>
