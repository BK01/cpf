<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:util="http://www.springframework.org/schema/util"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-3.0.xsd
  "
>
  <bean
    id="cpfDefaultProperties"
    class="com.revolsys.collection.AttributeMap"
    p:properties="file:/apps_ux/cpf/config/default.properties" />
    
  <util:map
    id="cpfWorkerProperties"
    map-class="com.revolsys.collection.AttributeMap"
  >
    <entry
      key="cpfInternalWebServiceUrl"
      value="${ca.bc.gov.cpf.app.baseUrl}" />
      
    <entry
      key="cpfInternalConsumerKey"
      value="${ca.bc.gov.cpf.ws.consumerKey}" />
      
    <entry
      key="cpfInternalConsumerSecret"
      value="${ca.bc.gov.cpf.ws.consumerSecret}" />
      
    <entry
      key="businessApplicationClassLoader.libDirectories"
    >
      <set>
        <value>/apps_ux/cpf/deployment/plugins/</value>
      </set>
    </entry>
  </util:map>
</beans>
