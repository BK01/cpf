<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
 <appender name="ConsoleLog" class="org.apache.log4j.ConsoleAppender">
    <param name="threshold" value="ERROR" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%p\t%c\t%m%n"/>
    </layout>
  </appender>

  <appender name="FileLog" class="org.apache.log4j.FileAppender">
    <param name="file" value="/apps_ux/logs/cpf/cpf-worker.log" />
    <param name="append" value="false" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d\t%p\t%c\t%m%n"/>
    </layout>
  </appender>

  <logger
    name="ca.bc.gov"
  >
    <level
      value="${ca.bc.gov.cpf.logLevel}" />
  </logger>

  <logger
    name="ca.bc.gov.webade"
  >
    <level
      value="ERROR" />
  </logger>

  <root >
    <level value="ERROR" />
    <appender-ref ref="ConsoleLog"/>
    <appender-ref ref="FileLog"/>
  </root>
</log4j:configuration>
