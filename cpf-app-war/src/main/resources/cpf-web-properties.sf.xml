<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:util="http://www.springframework.org/schema/util"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-3.0.xsd
  "
>
  <util:map
    id="cpfWebProperties"
    map-class="com.revolsys.collection.AttributeMap"
  >
    <entry
      key="businessApplicationClassLoader.libDirectories"
    >
      <set>
        <value>/apps_ux/cpf/deployment/plugins/</value>
      </set>
    </entry>


    <entry
      key="batchJobService.authorizationService"
    >
      <bean
        class="ca.bc.gov.open.cpf.api.security.service.ChainedAuthorizationService"
      >
        <property
          name="authorizationServices"
        >
          <list>
            <bean
              class="ca.bc.gov.cpf.web.app.WebAdeAuthorizationService"
              p:UserAccountDao-ref="ca.bc.gov.open.cpf.api.domain.UserAccount-dao" />
          </list>
        </property>
      </bean>
    </entry>

    <entry
      key="batchJobService.baseUrl"
      value="${ca.bc.gov.cpf.app.baseUrl}" />
    <entry
      key="batchJobService.userClassBaseUrls"
    >
      <map>
        <entry
          key="http://gov.bc.ca/"
          value="${ca.bc.gov.cpf.app.secureBaseUrl}" />
      </map>
    </entry>
  </util:map>
</beans>