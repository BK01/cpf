<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:util="http://www.springframework.org/schema/util"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-3.0.xsd
  "
>
  <bean
    id="bcgovGlobalProperties"
    class="com.revolsys.collection.AttributeMap"
    p:properties="file:///apps/config/global.properties" />

  <bean
    id="cpfDefaultProperties"
    class="com.revolsys.collection.AttributeMap"
    p:properties="file:///apps/config/cpf/cpf.properties" />

  <util:map
    id="cpfWebProperties"
    map-class="com.revolsys.collection.AttributeMap"
  >
    <entry
      key="businessApplicationRegistry.logDirectory"
      value="/apps/logs/cpf/" />
    
    <entry
      key="mavenRepository.root"
      value="file://${ca.bc.gov.cpf.repositoryDirectory}" />

    <entry key="mavenRepository.repositoryLocations">
      <list>
        <value>http://apps.gov.bc.ca/gov/artifactory/repo/</value>
      </list>
    </entry>

    <entry
      key="batchJobService.baseUrl"
      value="${ca.bc.gov.cpf.app.baseUrl}" />
    <entry key="batchJobService.userClassBaseUrls">
      <map>
        <entry
          key="http://gov.bc.ca/"
          value="${ca.bc.gov.cpf.app.secureBaseUrl}" />
      </map>
    </entry>

    <entry
      key="sideMenu.title"
      value="B.C. Home" />

    <entry
      key="sideMenu.uri"
      value="http://www.gov.bc.ca/" />

    <entry
      key="adminSideMenu.title"
      value="B.C. Home" />

    <entry
      key="adminSideMenu.uri"
      value="http://www.gov.bc.ca/" />

    <entry
      key="cpfSiteminderLogoutSuccess.logoutUrl"
      value="https://logon.gov.bc.ca/clp-cgi/logoff.cgi" />
  </util:map>
</beans>