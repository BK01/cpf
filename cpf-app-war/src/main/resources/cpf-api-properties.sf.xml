<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:util="http://www.springframework.org/schema/util"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-3.0.xsd
  "
>
  <bean
    id="bcgovGlobalProperties"
    class="com.revolsys.collection.AttributeMap"
    p:properties="file:///apps/config/global.properties" />

  <bean
    id="cpfDefaultProperties"
    class="com.revolsys.collection.AttributeMap"
    p:properties="file:///apps/config/cpf/cpf.properties" />

  <util:map
    id="cpfApiProperties"
    map-class="com.revolsys.collection.AttributeMap"
  >
    <!-- The URL to the cpf database. -->
    <entry
      key="cpfDataSource.url"
      value="${ca.bc.gov.cpf.db.url}" />

    <!-- The user to the cpf database. -->
    <entry
      key="cpfDataSource.username"
      value="${ca.bc.gov.cpf.db.user}" />

    <!-- The password for the cpf database. -->
    <entry
      key="cpfDataSource.password"
      value="${ca.bc.gov.cpf.db.password}" />
    <entry key="cpfDataSource.config">
      <map>
        <entry
          key="minPoolSize"
          value="1" />
        <entry
          key="maxPoolSize"
          value="${ca.bc.gov.cpf.db.maxConnections}" />
      </map>
    </entry>

    <entry
      key="serverRenameFilter.serverUrl"
      value="${ca.bc.gov.cpf.app.baseUrl}" />

    <entry
      key="secureServerRenameFilter.serverUrl"
      value="${ca.bc.gov.cpf.app.secureBaseUrl}" />
  </util:map>
</beans>