<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  "
>
  <bean
    id="footerMenu"
    class="com.revolsys.ui.model.Menu"
  >
    <property name="menus">
      <list>
        <bean
          class="com.revolsys.ui.model.Menu"
          p:title="COPYRIGHT"
          p:uri="http://www2.gov.bc.ca/gov/admin/copyright.page" />
        <bean
          class="com.revolsys.ui.model.Menu"
          p:title="DISCLAIMER"
          p:uri="http://www2.gov.bc.ca/gov/admin/disclaimer.page" />
        <bean
          class="com.revolsys.ui.model.Menu"
          p:title="PRIVACY"
          p:uri="http://www2.gov.bc.ca/gov/admin/privacy.page" />
        <bean
          class="com.revolsys.ui.model.Menu"
          p:title="ACCESSIBILITY"
          p:uri="http://www2.gov.bc.ca/gov/admin/accessibility.page" />
      </list>
    </property>
  </bean>

  <bean
    name="/secure/"
    class="com.revolsys.ui.web.controller.ViewNameController"
    p:viewName="redirect:/secure/ws/" />

  <bean
    name="/secure/index"
    class="com.revolsys.ui.web.controller.ViewNameController"
    p:viewName="redirect:/secure/ws/" />

  <bean
    name="/secure/**"
    class="com.revolsys.ui.web.controller.PathAliasController"
    p:prefix="/secure"
    p:aliasPrefix="" />


</beans>
