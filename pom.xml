<?xml version="1.0" encoding="UTF-8"?>
<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
>
  <modelVersion>4.0.0</modelVersion>
  <groupId>ca.bc.gov.cpf</groupId>
  <artifactId>cpf</artifactId>
  <packaging>pom</packaging>
  <name>BCGOV Cloud Processing Framework</name>
  <version>TRUNK-SNAPSHOT</version>

  <modules>
    <module>cpf-app-war</module>
    <module>cpf-worker-war</module>
  </modules>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>tomcat7Deploy</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.cargo</groupId>
            <artifactId>cargo-maven2-plugin</artifactId>
            <version>1.1.3</version>
            <configuration>
              <container>
                <containerId>tomcat7x</containerId>
                <type>remote</type>
              </container>
              <configuration>
                <type>runtime</type>
                <properties>
                  <cargo.remote.uri>${tomcat7ManagerUrl}</cargo.remote.uri>
                  <cargo.remote.username>${tomcat7ManagerUsername}</cargo.remote.username>
                  <cargo.remote.password>${tomcat7ManagerPassword}</cargo.remote.password>
                </properties>
              </configuration>
              <deployer>
                <type>remote</type>
                <deployables>
                  <deployable>
                    <groupId>${project.groupId}</groupId>
                    <artifactId>${project.artifactId}</artifactId>
                    <type>war</type>
                    <properties>
                      <context>${webContextPath}</context>
                    </properties>
                  </deployable>
                </deployables>
              </deployer>
              <skip>${skipWebDeploy}</skip>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <ca.bc.gov.open.cpf.version>3.0.0-SNAPSHOT</ca.bc.gov.open.cpf.version>
    <databaseVendor>oracle</databaseVendor>
    <ca.bc.gov.open.cpf.plugin.directory>/apps_ux/cpf/plugins</ca.bc.gov.open.cpf.plugin.directory>
    <skipWebDeploy>true</skipWebDeploy>
  </properties>
</project>
