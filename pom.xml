<?xml version="1.0" encoding="UTF-8"?>
<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
>
  <modelVersion>4.0.0</modelVersion>

  <groupId>ca.bc.gov.cpf</groupId>
  <artifactId>cpf</artifactId>
  <packaging>pom</packaging>
  <name>BCGOV Cloud Processing Framework</name>
  <version>3.0.0-SNAPSHOT</version>

  <developers>
    <developer>
      <name>Paul Austin</name>
      <organization>Revolution Systems Inc.</organization>
      <organizationUrl>http://www.revolsys.com/</organizationUrl>
      <email>paul.austin@revolsys.com</email>
      <timezone>PST</timezone>
    </developer>
  </developers>

  <scm>
    <connection>scm:svn:http://maps.bcgov/svn/cpf/source/trunk/</connection>
    <developerConnection>scm:svn:https://maps.bcgov/svn/cpf/source/trunk/</developerConnection>
    <url>http://apps.gov.bc.ca/gov/wsvn/TC7.cpf-source</url>
  </scm>

  <organization>
    <name>The Province of British Columbia</name>
    <url>http://www.gov.bc.ca/</url>
  </organization>

  <modules>
    <module>cpf-app-war</module>
    <module>cpf-worker-war</module>
  </modules>

  <profiles>
    <profile>
      <id>tomcat7Deploy</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.cargo</groupId>
            <artifactId>cargo-maven2-plugin</artifactId>
            <version>1.1.3</version>
            <executions>
              <execution>
                <id>redeploy</id>
                <goals>
                  <goal>deployer-redeploy</goal>
                </goals>
                <phase>install</phase>
              </execution>
            </executions>
            <configuration>
              <container>
                <containerId>tomcat7x</containerId>
                <type>remote</type>
              </container>
              <configuration>
                <type>runtime</type>
                <properties>
                  <cargo.remote.uri>${tomcat7ManagerUrl}</cargo.remote.uri>
                  <cargo.remote.username>${tomcat7ManagerUsername}</cargo.remote.username>
                  <cargo.remote.password>${tomcat7ManagerPassword}</cargo.remote.password>
                </properties>
              </configuration>
              <deployer>
                <type>remote</type>
                <deployables>
                  <deployable>
                    <groupId>${project.groupId}</groupId>
                    <artifactId>${project.artifactId}</artifactId>
                    <type>war</type>
                  </deployable>
                </deployables>
              </deployer>
              <skip>${skipWebDeploy}</skip>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <databaseVendor>oracle</databaseVendor>
    <skipWebDeploy>true</skipWebDeploy>
    <com.revolsys.open.version>TRUNK-SNAPSHOT</com.revolsys.open.version>
    <ca.bc.gov.open.cpf.version>3.0.0-SNAPSHOT</ca.bc.gov.open.cpf.version>
  </properties>
</project>
